/* 头部 */

.user image{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50rpx;
	border: 1px solid #ededed;
	float: left;
	margin-right: 20rpx;
}
.user text{
	line-height: 60rpx;
	color: #3c6fb6;
	margin-left: 20rpx;
}
.user .date{
	font-size: 14px;
	color:#626262;
}
.title{
	font-weight: bold;
	font-size: 20px;
	position: absolute;
	bottom: 20rpx;
}
.price{
	font-size: 30px;
	color: #017AFF;
	position: absolute;
	right: 50rpx;
	top: 35rpx;
}
/* 头部结束 */
/* 底部接单 */
.footer{
	position: fixed;
	bottom: 0;
	width: 100%;
	height: 100rpx;
	background-color: white;
	border-top:1px solid #ededed;
}
.footer view{
	display: inline-block;
	font-size:16px;
	text-align: center;
	line-height: 100rpx;
}
.share{
	position: absolute;
	top: 16rpx;
	left: -60rpx;
	background: none;
	border: none;
	outline: none;
	width: 50rpx;
	height: 60rpx;
	font-weight: normal;
}