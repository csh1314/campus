@import 'iconfont.wxss';
.tab-wrap{
	height: 100%;
	background-color: #EDEDED;
}
.weui-tabs-bar__wrp {
    border-bottom: 1px solid #eee;
}
.weui-tabs-bar__title {
    margin: 0px 10px;
}

.tab-bar-title__selected {
    font-size: 20px;
    font-weight: bold;
}
.weui-tabs-swiper {
    width: 100%;
	height: calc(100vh - 75rpx) !important;
}
.tab-content {
	background-color: #ededed;
	box-sizing: border-box;
	padding: 5rpx 20rpx;
	height: auto !important;
	width: 100%;
	text-align: center;
}
.marketList,.skillList,.errandList,.shareList{
	box-sizing: border-box;
	margin-top: 10rpx;
	margin-bottom: 20rpx;
	padding: 10rpx 5rpx;
	height: 25%;
	width: 100%;
	border: 1px solid #EDEDED;
	border-radius: 20rpx;
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	justify-content: space-between;
	background-color: white;
	color: #7c7e81;
	position: relative;
}
.marketList-title,.skillList-title,.errandList-title,.shareList-title{
	font-size: 20px;
	line-height: 22rpx;
}
.marketList-price,.errandList-price{
	height: 20rpx;
	font-size: 25px;
	color: #006dff;
	font-weight:bold;
	position: absolute;
	right: 10%;
	top: 5%;
}
.skillList-price{
	height: 20rpx;
	font-size: 25px;
	position: absolute;
	right: 5%;
	top: 5%;
	color: #006dff;
	font-weight:bold;
	font-size: 20px;
}
.marketList-describes,.skillList-remark,.errandList-remark,.shareList-remark{
	height: 180rpx;
	width: 500rpx;
	display: -webkit-box;
	overflow: hidden;
	white-space: normal;
	text-overflow: ellipsis;
	word-wrap: break-word;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	-webkit-box-align:start;
}
