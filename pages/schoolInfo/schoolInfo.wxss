page{
	overflow: hidden;
}
.page_message{
    background-color: white;
    width: 98%;
    border-radius: 10rpx;
    margin: 12rpx auto 0;
    height: 400rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    padding: 20rpx;
    box-sizing: border-box;
    text-align: center;
    font-size: 28rpx;
}
.box_message{
    width: 200rpx;
    height: 180rpx;
}
.message_Image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    position: relative;
    left: 50rpx;
    top: 8rpx;
}
.message_Image image{
    width: 84rpx;
    height: 84rpx;
    position: relative;
    top: 8rpx;
}
.tenMessage{
    background-color: white;
    width: 98%;
    border-radius: 10rpx;
    height: auto;
    margin: 0 auto 12rpx;
}
.new{
    width: 100%;
    height: 70rpx;
    margin: 20rpx 0 0 12rpx;
    display: flex;
    align-items: flex-start;
	color: #5599FE;
	font-size: 18px;
	font-weight: bold;
	position: relative;
}
.new view{
    width: 200rpx;
    height: 100%;
    margin: 0 20rpx;
    text-align: center;
	border-left: 10px solid #5599FE;
	line-height: 70rpx;
	position: absolute;
	left: -20rpx;
}
.bottomTip{
    width: 100%;
    color: #5599FE;
    font-size: 30rpx;
    text-align: center;
}

.userMessage{
    width: 100%;
    height: 88rpx;
    margin-bottom: 12rpx;
}
.userMessage .userIamge{
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    float: left;
}
.userMessage .userName{
    font-size: 34rpx;
    float: left;
    margin-left: 28rpx;
    line-height: 88rpx;
	color: #3c6fb6;
}
.userMessage .publishTime{
    font-size: 28rpx;
    float: right;
    color: #9c9b9d;
    margin-right: 28rpx;
    line-height: 88rpx;
}
.messageList{
	box-sizing: border-box;
	padding: 20rpx 15rpx;
	margin-bottom: 20rpx;
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	justify-content: space-between;
	background-color: white;
	color: #48494b;
	position: relative;
}
.message_detail{
    width: 100%;
}
.message_detail .message_content{
    overflow: hidden; 
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
}
.message_detail .messageImage{
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
}
.message_detail .messageImage image{
    width: 220rpx;
    height: 220rpx;
    margin: 0 5rpx 10rpx;
}
