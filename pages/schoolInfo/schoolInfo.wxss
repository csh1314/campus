page{
	overflow: hidden;
}
.page_message{
    background-color: white;
    width: 98%;
    border-radius: 10rpx;
    margin: 12rpx auto 0;
    height: 400rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    padding: 20rpx;
    box-sizing: border-box;
    text-align: center;
    font-size: 28rpx;
}
.box_message{
    width: 200rpx;
    height: 180rpx;
}
.message_Image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    position: relative;
    left: 50rpx;
    top: 8rpx;
}
.message_Image image{
    width: 84rpx;
    height: 84rpx;
    position: relative;
    top: 8rpx;
}
.tenMessage{
    background-color: white;
    width: 98%;
    border-radius: 10rpx;
    height: auto;
    margin: 0 auto 12rpx;
}
.newAndHot{
    width: 100%;
    height: 70rpx;
    margin: 20rpx 0 0 12rpx;
    display: flex;
    align-items: flex-start;
}
.newAndHot view{
    width: 100rpx;
    height: 100%;
    margin: 0 20rpx;
    text-align: center;
}
.on{
    color: #5599FE;
    border-bottom: #5599FE solid 6rpx;
}
.someMessage{
    margin-top: 30rpx;
    width: 100%;
    height: 1620rpx;

}
swiper-item{
    width: 100%;
    height: auto;
}
swiper-item>navigator{
    width: 93%;
    height: 240rpx;
    margin: 22rpx auto 0;
    padding: 12rpx;
    box-sizing: border-box;
    border-radius: 8rpx;
    border: 2rpx solid rgb(222, 222, 223);
}
.message_header{
    color: #5599FE;
    overflow:hidden; 
    text-overflow:ellipsis; 
    white-space:nowrap; 
}
.message_detail{
    width: 78%;
    float: left;
}
.message_content{
    width: 100%;
    height: 100prx;
    margin-top: 18rpx;
    font-size: 30rpx;
    overflow: hidden; 
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
}
.detailImage{
    width: 120rpx;
    height: 120rpx;
    margin-top: 12rpx;
    float: right;
}
.bottomTip{
    width: 100%;
    color: #5599FE;
    font-size: 24rpx;
    text-align: center;
}